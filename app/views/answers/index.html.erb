<h1>Listing answers</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Right answer</th>
    <th>Wrong answer1</th>
    <th>Wrong answer2</th>
    <th>Wrong answer3</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.question_id %></td>
    <td><%= answer.right_answer %></td>
    <td><%= answer.wrong_answer1 %></td>
    <td><%= answer.wrong_answer2 %></td>
    <td><%= answer.wrong_answer3 %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

