		<div class="field">
		<%= label_tag "minimum" %>
		<%= text_field_tag "minimum" %>
		</div>	
		<div class="field">
		<%= label_tag "maximum" %>
		<%= text_field_tag "maximum" %>
		</div>
		<div class="field">
		<%= label_tag "multiple" %>
		<%= text_field_tag "multiple" %>
		</div>	
	</div>
	<div class="string_variable_input">
		<div class="field">
		<%= label_tag "name" %>
		<%= text_field_tag "name" %>
		</div>	
	</div>	
</div>	
</section>

<section id="answers">
<h2>Answers</h2>
	<div id="field">
	<%= label_tag 'right_answer' %>
	<%= text_field_tag 'right_answer' %>	
	</div>
	<div id="field">
	<%= label_tag 'wrong_answer1', 'Wrong Answer' %>
	<%= text_field_tag 'wrong_answer1' %>	
	</div>
	<div id="field">
	<%= label_tag 'wrong_answer2', 'Wrong Answer' %>
