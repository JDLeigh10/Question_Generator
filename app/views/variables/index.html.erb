<h1>Listing variables</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Format</th>
    <th>Minimum</th>
    <th>Maximum</th>
    <th>Multiple</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @variables.each do |variable| %>
  <tr>
    <td><%= variable.question_id %></td>
    <td><%= variable.format %></td>
    <td><%= variable.minimum %></td>
    <td><%= variable.maximum %></td>
    <td><%= variable.multiple %></td>
    <td><%= link_to 'Show', variable %></td>
    <td><%= link_to 'Edit', edit_variable_path(variable) %></td>
    <td><%= link_to 'Destroy', variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

